generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  userId Int @id @default(autoincrement()) @map("userId")
  name String @map("name")
  nickname String @map("nickname")
  id String @unique @map("id")
  password String @map("password")
  

  userInfos UserInfos?
  posts Posts[]
  comments Comments[]
  userHistories UserHistories[]

  @@map("Users")
}

model GameRecord {
  gameRecordId Int @id @default(autoincrement()) @map("gameRecordId")
  userIdA Int @map("userIdA")
  userIdB Int @map("userIdB")
  score String @map("score")
  result String @map("result")
  logs String @map("logs")
  createdAt DateTime @default(now()) @map("createdAt")
  updatedAt DateTime @updatedAt @map("updatedAt")

  @@map("GameRecord")
}

model Ranking {
  rankingId Int @id @default(autoincrement()) @map("rankingId")
  userId Int @unique @map("userId")
  rankingScore Int @map("rankingScore")
  rank Int @map("rank")
  win Int @default(0) @map("win")
  draw Int @default(0) @map("draw")
  defeat Int @default(0) @map("defeat")
  updatedAt DateTime @updatedAt @map("updatedAt")

  @@map("Ranking")
}

model Squad {
  squadId Int @id @default(autoincrement()) @map("squadId")
  userId Int @unique @map("userId")
  characterA Int @map("characterA")
  characterB Int @map("characterB")
  characterC Int @map("characterC")

  @@map("Squad")
}

model Inventory {
  inventoryId Int @id @default(autoincrement()) @map("inventoryId")
  userId Int @unique @map("userId")

  @@map("Inventory")
}

model InventoryCharacter {
  inventoryCharacterId Int @id @default(autoincrement()) @map("inventoryCharacterId")
  inventoryId Int @map("inventoryId")
  characterDBId Int @map("characterDBId")
  upgrade Int @map("upgrade")

  @@map("InventoryCharacter")
}

model CharacterDB {
  characterDBId Int @id @default(autoincrement()) @map("characterDBId")
  name String @map("name")
  shoot Int @map("shoot")
  speed Int @map("speed")
  pass Int @map("pass")
  dribble Int @map("dribble")
  defence Int @map("defence")

  @@map("CharacterDB")
}

model UpgradeDB {
  upgradeDBId Int @id @default(autoincrement()) @map("characterDBId")
  upgrade int @map("upgrade")
  probablity int @map("probablity")
  shoot Int @map("shoot")
  speed Int @map("speed")
  pass Int @map("pass")
  dribble Int @map("dribble")
  defence Int @map("defence")

  @@map("UpgradeDB")
}